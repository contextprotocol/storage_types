{
  "compilerOptions": {
    "types": [ "node" ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [ "es2016", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strict": false,
    "target": "es2016",
    "declaration": true,
    "skipLibCheck": true,    
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": [ "node_modules" ]
}
